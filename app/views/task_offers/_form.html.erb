<%= form_with(model: task_offer) do |form| %>
  <% if task_offer.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(task_offer.errors.count, "error") %> prohibited this task_offer from being saved:</h2>

      <ul>
        <% task_offer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :titleImg, style: "display: block" %>
    <%= form.text_field :titleImg %>
  </div>

  <div>
    <% TaskOffer::TASKS.each do |task|%>
  <%= form.label task %>
  <%= form.check_box :tasks, {multiple: true, checked: form.object.tasks&.include?(task.to_s)}, task, nil  %>
  <%end%>
  </div>

  <div>
    <%= form.label :point, style: "display: block" %>
    <%= form.text_field :point %>
  </div>

  <div>
    <%= form.label :reward, style: "display: block" %>
    <%= form.text_field :reward %>
  </div>

  <div>
    <%= form.label :termsCondition, style: "display: block" %>
    <%= form.text_field :termsCondition %>
  </div>

  <div>
    <%= form.label :steps, style: "display: block" %>
    <%= form.text_field :steps %>
  </div>

  <div>
    <%= form.label :link, style: "display: block" %>
    <%= form.text_field :link %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
